<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PruebaProgresoII.MainPage">

    <ScrollView>
        <StackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Bienvenido a la Aplicacion de Santiago Conlago"
                FontSize="50"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level2" />

            <Image
            Source="meme.png"
            HeightRequest="185"
            Aspect="AspectFit" />

            <Button Text="Chistes"
            Clicked="Button_Clicked"
            HorizontalOptions="Center" />

            <Button Text="About"
             Clicked="Button_ClickedAbout"
             HorizontalOptions="Center" />
        </StackLayout>
    </ScrollView>

</ContentPage>
